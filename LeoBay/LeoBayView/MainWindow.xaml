<Window x:Class="LeoBayView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeoBayView"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
       
        <!--Navigation Panel-->
        <Grid Background="DarkBlue">
            <!--Header-->
            <Grid Background="#2E333A"
                  VerticalAlignment="Top"
                  Height="65">
                <Label x:Name="Header" Content="Leo" Grid.Row="0" FontSize="35">

                </Label>
            </Grid>
            <Grid x:Name="nav_panel_left" 
                  HorizontalAlignment="Left" 
                  Width="75"
                  Background="#2E333A">
                
                <StackPanel x:Name="stack_panel">
                    
                    <Button x:Name="ButtonHome" Margin="0,10,0,10" Click="ButtonHomeClick">
                        Home
                    </Button>
                    <Button x:Name="ButtonRegister" Margin="0,10,0,10" Click="ButtonRegisterClick">
                        Register
                    </Button>
                    <Button>
                        Login
                    </Button>
                    <Button>
                        Items
                    </Button>
                    <Button>
                        Your Space
                    </Button>
                    <Button>
                        Cart
                    </Button>
                </StackPanel>
                
            </Grid>
            <Grid Width="725" Height="520" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                <StackPanel  Name="RegisterPanel" Orientation="Vertical" VerticalAlignment="Center"/>

            </Grid>
        </Grid>
        
    </Grid>
</Window>
