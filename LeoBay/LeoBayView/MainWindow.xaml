<Window x:Class="LeoBayView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeoBayView"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <!--Navigation Panel-->
        <Grid Background="DarkBlue">
            <Grid x:Name="Test" Width="200"
                  Height="100">
                <Label x:Name="LabelDisplay" Content="Hi" FontSize="35"
               Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" HorizontalContentAlignment="Right"
               VerticalContentAlignment="Center" Background="White" Padding="0 0 30 0" />
            </Grid>
            
            <Grid x:Name="nav_panel_left" 
                  HorizontalAlignment="Left" 
                  Width="75"
                  Background="#2E333A">
                <StackPanel x:Name="stack_panel">
                    <Button x:Name="ButtonHome" Margin="0,10,0,10" Click="ButtonHomeClick">
                        Home
                    </Button>
                    <Button>
                        Register
                    </Button>
                    <Button>
                        Login
                    </Button>
                    <Button>
                        Items
                    </Button>
                    <Button>
                        Your Space
                    </Button>
                    <Button>
                        Cart
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
